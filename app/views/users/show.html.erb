<h1><%= @user.username %>'s Profile</h1>

<div class = "row">
  <div class = "col-sm-6">
    <h2>Threads created by <%= @user.username %></h2>
      <% @posts.each do |post| %>
        <%= link_to post do %>
        <h4><%= post.title%></h4>
    <% end %>

    <br>
  <% end %>
  </div>
  <div class = "col-sm-6">
    <h2>Comments created by <%= @user.username %></h2>
    <% @comments.each do |comment| %>
      <h4><%= link_to comment.content, comment.post %></h4>
      <br>
    <% end %>
  </div>
</div>


<h1><%= @user.username %>'s Profile</h1>
<h2>Threads created by <%= @user.username %></h2>
<% @posts.each do |post| %>
  <%= image_tag @post.pic.url %>
  <h4><%= link_to post.title, post %></h4>
  <br>
<% end %>

<h2>Comments created by <%= @user.username %></h2>
<% @comments.each do |comment| %>
  <h4><%= link_to comment.content, post %></h4>
  <br>
<% end %>